<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" BorderPane.alignment="CENTER"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.controller.ControlPaneController">

   <children>
      <Button id="prev" fx:id="prevButton" mnemonicParsing="false"
              prefHeight="30.0" prefWidth="45.0" HBox.hgrow="NEVER" />

      <ToggleButton id="play" fx:id="playButton" mnemonicParsing="false"
                    prefHeight="30.0" prefWidth="50.0" HBox.hgrow="NEVER" />

      <Button id="next" fx:id="nextButton" mnemonicParsing="false"
              prefHeight="30.0" prefWidth="45.0" HBox.hgrow="NEVER" />

      <Slider fx:id="volumeSlider" HBox.hgrow="NEVER">
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding></Slider>

      <Slider fx:id="songSlider" HBox.hgrow="ALWAYS">
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding></Slider>

   </children>

</HBox>
